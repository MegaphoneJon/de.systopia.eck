<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Eck</base>
  <class>EckEntityType</class>
  <name>civicrm_eck_entity_type</name>
  <comment>Custom CiviCRM entity types</comment>
  <log>true</log>
  <title>ECK Entity Type</title>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique EckEntityType ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>name</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <comment>The entity type's name</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <index>
    <name>UI_name</name>
    <fieldName>name</fieldName>
    <unique>true</unique>
  </index>

  <field>
    <name>label</name>
    <type>text</type>
    <required>true</required>
    <comment>The entity type's human-readable name</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>icon</name>
    <title>Icon</title>
    <type>varchar</type>
    <length>255</length>
    <default>NULL</default>
    <html>
      <type>Text</type>
    </html>
    <comment>crm-i icon class</comment>
  </field>

  <field>
    <name>in_recent</name>
    <type>boolean</type>
    <title>In Recent Items</title>
    <comment>Does this entity type get added to the recent items list</comment>
    <default>1</default>
    <required>true</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

</table>
